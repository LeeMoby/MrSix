<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/ibtn_return"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_return" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/tv_patrol_index_user"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_patrol"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:text="@string/index_btn_patrol"
            android:textSize="14sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibtn_patrol_index_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_left" />

        <TextView
            android:id="@+id/tv_patrol_index_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Patrol"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_patrol_index_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:30"
            android:textSize="10sp" />

        <ImageButton
            android:id="@+id/ibtn_patrol_index_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_right" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_index_line"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ListView
            android:id="@+id/lv_patrol_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>